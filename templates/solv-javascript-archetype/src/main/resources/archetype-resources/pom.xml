<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <!-- !! Do not edit this file - unless you know what you are doing !! -->

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codingkata.unit</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <name>${kataId}-javascript</name>
    <packaging>jar</packaging>
    <url>www.codingkata.org</url>

    <parent>
        <groupId>org.codingkata</groupId>
        <artifactId>parent-solv</artifactId>
        <version>${libVersion}</version>
    </parent>

    <repositories>
        <repository>
            <id>codingkata-release</id>
            <url>http://codingkata.org/repo/release</url>
        </repository>
    </repositories>

    <dependencies>

        <dependency>
            <groupId>rhino</groupId>
            <artifactId>js</artifactId>
            <version>${language.version}</version>
        </dependency>

        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>${kataId}-task</artifactId>
            <version>${kata.version}</version>
        </dependency>

        <!-- TEST -->
        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>common-test</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/code</sourceDirectory>
        <testSourceDirectory>src/test/code</testSourceDirectory>

        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <java classname="org.mozilla.javascript.tools.jsc.Main"
                                      failonerror="yes" dir="">
                                    <arg value="-nosource" />
                                    <arg value="-O" />
                                    <arg value="9" />
                                    <arg value="-d" />
                                    <arg value="${basedir}/target/classes/" />
                                    <arg value="-package" />
                                    <arg value="org.codingkata.unit" />
                                    <arg value="-extends" />
                                    <arg value="org.codingkata.unit.api.BaseKataSolution" />
                                    <arg value="${basedir}/src/main/code/org/codingkata/unit/MyKata.js" />
                                    <classpath refid="maven.compile.classpath"/>
                                </java>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <kata.version>${kataVersion}</kata.version>
        <language.version>${langVersion}</language.version>
    </properties>

</project>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <!-- !! Do not edit this file - unless you know what you are doing !! -->

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codingkata.unit</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <name>${kataId}-javafx</name>
    <packaging>jar</packaging>
    <url>www.codingkata.org</url>

    <parent>
        <groupId>org.codingkata</groupId>
        <artifactId>parent-solv</artifactId>
        <version>${libVersion}</version>
    </parent>

    <repositories>
        <repository>
            <id>codingkata-release</id>
            <url>http://codingkata.org/repo/release</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafxrt</artifactId>
            <version>${language.version}</version>
            <scope>system</scope>
            <systemPath>${javafx.home}/lib/shared/javafxrt.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>javafxc</artifactId>
            <version>${language.version}</version>
            <scope>system</scope>
            <systemPath>${javafx.home}/lib/shared/javafxc.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>toolchain</artifactId>
            <version>${language.version}</version>
            <scope>system</scope>
            <systemPath>${javafx.home}/lib/shared/toolchain.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>net.java.dev.openjfx</groupId>
            <artifactId>websvc</artifactId>
            <version>${language.version}</version>
            <scope>system</scope>
            <systemPath>${javafx.home}/lib/desktop/websvc.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>${kataId}-task</artifactId>
            <version>${kata.version}</version>
        </dependency>

        <!-- TEST -->
        <dependency>
            <groupId>org.codingkata.unit</groupId>
            <artifactId>common-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/code</sourceDirectory>
        <testSourceDirectory>src/test/code</testSourceDirectory>

        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <echo>Compiling JavaFX sources</echo>
                                <path id="javafxc.classpath">
                                    <fileset dir="${env.JAVAFX_HOME}">
                                        <include name="**/javafxrt.jar" />
                                        <include name="**/javafxc.jar" />
                                        <include name="**/toolchain.jar" />
                                    </fileset>
                                </path>
                                <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask"
                                         classpathref="javafxc.classpath" name="javafxc" />
                                 <mkdir dir="${project.build.outputDirectory}" />
                                <javafxc destdir="target/classes" compilerclasspathref="javafxc.classpath"
                                         debug="true" verbose="true">
                                    <src path="src/main/code" />
                                    <classpath refid="maven.compile.classpath" />
                                </javafxc>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <kata.version>${kataVersion}</kata.version>
        <language.version>${langVersion}</language.version>
        <javafx.home>${env.JAVAFX_HOME}</javafx.home>
    </properties>

</project>
